@model List<Genre>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Genre List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-4">
                <form method="get" asp-action="Index">
                    <div class="input-group">
                        <input type="text" class="form-control rounded-left no-outline" placeholder="Search author..." name="searchString" value="@ViewBag.SearchString" style="max-width: 200px;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary no-outline">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-8 text-end">
                <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Genre
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Genre Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="70%">@obj.Name</td>
                        <td class="text-end">
                            <div class="w-75 btn-group" role="group" >
                                <a asp-controller="Genre" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>  Edit   
                                </a>
                                <a asp-controller="Genre" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
