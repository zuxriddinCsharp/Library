@model BookVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Book.Id != 0 ? "Update" : "Create") Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Book.Id" hidden />
            <input asp-for="Book.ImageUrl" hidden />
            <input asp-for="Book.FilePath" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Title" class="form-control border-0 shadow" />
                            <label asp-for="Book.Title" class="ms-2"></label>
                            <span asp-validation-for="Book.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <textarea asp-for="Book.Description" class="form-control border-0 shadow"></textarea>
                            <label asp-for="Book.Description" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.ISBN" class="form-control border-0 shadow" />
                            <label asp-for="Book.ISBN" class="ms-2"></label>
                            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Author" class="form-control border-0 shadow" />
                            <label asp-for="Book.Author" class="ms-2"></label>
                            <span asp-validation-for="Book.Author" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Book.GenreId" asp-items="@Model.GenreList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Genre</option>
                            </select>
                            <label asp-for="Book.GenreId" class="ms-2"></label>
                            <span asp-validation-for="Book.GenreId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Book.FilePath" class="ms-2"></label>
                        </div>
                        
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="image"  class="form-control border-0 shadow" />
                            <label asp-for="Book.ImageUrl" class="ms-2"></label>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Book.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Book.ImageUrl" width="100%"
                         style="border-radius:5px; border:10px solid #bbb9b9" alt="Images" />
                </div>
            </div>
           
        </form>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists  table visualblocks wordcount' ,
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
